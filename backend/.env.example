APP_NAME=BankQu
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database untuk Docker (terpisah dari MySQL lokal anda)
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite
##DB_HOST=127.0.0.1
##DB_PORT=3306
##DB_USERNAME=root
##DB_PASSWORD=

# Cache & Session (sesuai config anda)
CACHE_STORE=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue & Broadcasting
QUEUE_CONNECTION=database
BROADCAST_CONNECTION=log

# File Storage
FILESYSTEM_DISK=local

# Mail Configuration (untuk development)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="no-reply@bankqu.local"
MAIL_FROM_NAME="${APP_NAME}"

# CORS Configuration (PENTING untuk koneksi FE-BE)
SANCTUM_STATEFUL_DOMAINS=localhost:3000,127.0.0.1:3000
SESSION_DOMAIN=localhost

# Redis (optional - jika mau pakai cache Redis)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Vite
VITE_APP_NAME="${APP_NAME}"




